<Window x:Class="Calculator.Views.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator.Views"
        mc:Ignorable="d"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" 
        Height="350" Width="350">
    <Window.Resources>
        <ResourceDictionary Source="../Styles/Calculators/BasicCalculators.xaml"></ResourceDictionary>
    </Window.Resources>
    <ContentControl Content="{Binding SelectedCalculatorViewModel}"></ContentControl>
</Window>
